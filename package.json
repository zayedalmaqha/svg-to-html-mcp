{
  "name": "svg-to-html-mcp",
  "version": "1.0.0",
  "module": "index.ts",
  "type": "module",
  "description": "A Claude MCP tool to convert artifact TypeScript code to HTML pages with Chart.js and SVG support",
  "license": "MIT",
  "scripts": {
    "start": "ts-node --esm index.ts",
    "build": "tsc",
    "dev:mac": "bun run index.ts",
    "dev:win": "ts-node --esm index.ts",
    "install-tool": "node install.js",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.5.0",
    "chart.js": "^4.4.2",
    "chartjs-plugin-datalabels": "^2.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.4"
  },
  "bin": {
    "svg-to-html-mcp": "./index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "index.js",
    "index.ts",
    "dist"
  ]
}